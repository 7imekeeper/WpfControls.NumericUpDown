<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<Title>WpfControls Numeric Up-Down Control</Title>
		<Description>A custom control to adjust a number up or down</Description>
		<Company></Company>
		<Authors>Tyler Wilson</Authors>
        <Copyright>Tyler Wilson, 2021</Copyright>		
		<AssemblyName>WPFControls.NumericUpDown</AssemblyName>
		<RepositoryUrl>https://github.com/7imekeeper/WpfControls.NumericUpDown</RepositoryUrl>
		<Version>1.0.1</Version>
		<AssemblyVersion>$(Version)</AssemblyVersion>
		<FileVersion>$(Version)</FileVersion>
		<RootNamespace>WpfControls</RootNamespace>

		<UseWPF>True</UseWPF>
		<OutputType>Library</OutputType>
		<TargetFramework>net8.0-windows</TargetFramework>
		<RuntimeIdentifier>win-x64</RuntimeIdentifier>
		<PlatformTarget>AnyCPU</PlatformTarget>
		<Deterministic>True</Deterministic>
		<GenerateAssemblyInfo>False</GenerateAssemblyInfo>
		<GenerateDocumentationFile>True</GenerateDocumentationFile>
		<DocumentationFile>$(OutputPath)</DocumentationFile>
		<AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
		<AppendRuntimeIdentifierToOutputPath>false</AppendRuntimeIdentifierToOutputPath>

		<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
		<PackageId>$(AssemblyName)</PackageId>
		<PackageProjectUrl>$(RepositoryUrl)</PackageProjectUrl>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<PackageLicenseFile>LICENSE</PackageLicenseFile>
	</PropertyGroup>
	<ItemGroup>
	  <ProjectReference Include="..\WpfControls.Core\WpfControls.Core.csproj" />
	</ItemGroup>
	<ItemGroup>
		<None Update="LICENSE">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
		<None Update="README.md">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
	</ItemGroup>
	<ItemGroup>
		<None Update=".gitignore">
			<Visible>False</Visible>
		</None>
	</ItemGroup>
</Project>

